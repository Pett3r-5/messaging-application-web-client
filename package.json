{
  "name": "chat-application-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "@types/electron": "^1.6.10",
    "@types/jest": "^26.0.19",
    "@types/node": "^12.19.11",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/socket.io-client": "^1.4.34",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^11.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "socket.io-client": "^3.0.4",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none npx react-scripts start\" \"wait-on http://localhost:3000 && electron ./src/main.js\"",
